<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    tools:context=".controllers.DreamDetails">
    <ImageView
        android:layout_marginBottom="52dp"
        android:layout_gravity="center"
        android:src="@drawable/ghost_icon"
        android:layout_width="125dp"
        android:layout_height="125dp" />
<TextView
    android:padding="4dp"
    android:textAlignment="center"
    tools:text="My Bloody Dream"
    android:textColor="@android:color/holo_orange_dark"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
    android:id="@+id/dreamdetail_titleTV"
    android:layout_width="match_parent"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content" />
    <TextView
        android:padding="4dp"
        tools:text="Blah blih BlahBlah blih BlahBlah blih BlahBlah blih BlahBlah blih BlahBlah blih BlahBlah blih BlahBlah blih BlahBlah blih BlahBlah blih BlahBlah blih BlahBlah blih Blah"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:id="@+id/dreamdetail_descriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:padding="4dp"
            android:textAlignment="textStart"
            tools:text="blood"
            android:textColor="@android:color/holo_orange_dark"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:id="@+id/dreamdetail_labelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start" />
        <TextView
            android:padding="4dp"
            android:textAlignment="center"
            tools:text="12.01.2018"
            android:textColor="@android:color/holo_orange_dark"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:id="@+id/dreamdetail_daylTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>